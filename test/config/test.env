# Test Environment Configuration
# This file contains environment variables for testing

# Node Environment
NODE_ENV=test

# Server Configuration
PORT=0
HOST=localhost

# GitHub Configuration
GITHUB_WEBHOOK_SECRET=test-webhook-secret-123456789
GITHUB_TOKEN=ghp_test_token_123456789abcdef
GITHUB_API_URL=https://api.github.com

# SWE-Agent Configuration
SWE_AGENT_PATH=/usr/local/bin/swe-agent
SWE_AGENT_TIMEOUT=30000
MAX_CONCURRENT_JOBS=2
WORKSPACE_DIR=/tmp/test-swe-agent
CONFIG_TEMPLATES_DIR=./src/swe-agent/templates

# Logging Configuration
LOG_LEVEL=silent
LOG_FORMAT=json
LOG_OUTPUT=console
VERBOSE_TESTS=false

# Performance Configuration
ENABLE_CACHING=false
CACHE_TIMEOUT=30000
ENABLE_COMPRESSION=false

# Security Configuration
ENABLE_RATE_LIMIT=false
VALIDATE_WEBHOOKS=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=1000

# Test-specific Configuration
TEST_TIMEOUT=30000
CLEANUP_TEMP_FILES=true
ENABLE_REAL_FILES=false
MOCK_EXTERNAL_SERVICES=true

# Performance Testing
BENCHMARK_ITERATIONS=10
LOAD_TEST_DURATION=5
CONCURRENT_CONNECTIONS=10

# Memory Testing
MEMORY_LEAK_DETECTION=true
GC_EXPOSURE=false

# Modal Testing (for Modal.com deployment tests)
MODAL_ENVIRONMENT=test
MODAL_CPU_COUNT=2
MODAL_MEMORY_MB=1024
MODAL_ENABLE_SPOT=false
MODAL_ENABLE_SHARED_VOLUMES=false

# Docker Testing (for Docker deployment tests)
DOCKER_MEMORY_LIMIT=1073741824
DOCKER_CPU_LIMIT=1.0
CONTAINER_RUNTIME=docker
ENABLE_DOCKER_IN_DOCKER=false

# AWS Lambda Testing (for Lambda deployment tests)
AWS_LAMBDA_FUNCTION_NAME=test-swe-agent
AWS_REGION=us-east-1